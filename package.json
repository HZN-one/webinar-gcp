{
  "name": "webinar-gcp",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engines": {
    "node": "^16.13.0"
  },
  "repository": "https://github.com/HZN-one/webinar-gcp",
  "config": {
    "service_name": "webinar-gcp",
    "image_name": "webinar-gcp-cloud-run",
    "region": "us-central1",
    "project": "hzn-one"
  },
  "scripts": {
    "start": "node -r dotenv/config build/index.js",
    "start:dev": "nodemon --config restart.json",
    "clean": "rm -rf coverage build tmp",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest i --colors --verbose --coverage",
    "cloud:build": "gcloud builds submit --tag gcr.io/$npm_package_config_project/$npm_package_config_image_name",
    "cloud:run": "gcloud run deploy $npm_package_config_service_name --image gcr.io/$npm_package_config_project/$npm_package_config_image_name --allow-unauthenticated --region $npm_package_config_region",
    "cloud:run:new": "npm run cloud:build && npm run cloud:run",
    "docker:build": "docker build -t $npm_package_config_service_name .",
    "docker:run": "docker run -p 8080:8080 $npm_package_config_service_name",
    "docker:run:new": "npm run docker:build && npm run docker:run"
  },
  "author": "HZN",
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/firestore": "^4.15.1",
    "@google-cloud/secret-manager": "^3.10.1",
    "@hzn-one/commons": "^1.0.41",
    "@hzn-one/task-creators": "^1.0.18",
    "axios": "^0.24.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "joi": "^17.4.2",
    "module-alias": "^2.2.2",
    "tslib": "~2.3.1",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "~5.3.1",
    "@typescript-eslint/parser": "~5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-jest": "~25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "firestore-jest-mock": "^0.17.0",
    "jest": "^27.3.1",
    "jest-html-reporter": "^3.4.1",
    "nock": "^13.2.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.1.2",
    "tsutils": "~3.21.0",
    "typescript": "^4.4.4"
  },
  "_moduleAliases": {
    "@config": "build/config",
    "@controllers": "build/controllers",
    "@definitions": "build/definitions",
    "@middlewares": "build/middlewares",
    "@models": "build/models",
    "@server": "build",
    "@services": "build/services",
    "@utils": "build/utils",
    "@validations": "build/validations"
  }
}
{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@controllers/": [
        "src/controllers/"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@definitions/": [
        "src/definitions/"
      ],
      "@definitions/*": [
        "src/definitions/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@server/*": [
        "src/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@tests/*": [
        "__tests__/*"
      ],
      "@utils/": [
        "src/utils/"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@validations": [
        "src/validations/"
      ],
      "@validations/*": [
        "src/validations/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}